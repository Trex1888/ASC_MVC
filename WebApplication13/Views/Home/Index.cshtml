@{
    ViewData["Title"] = "Home Page";
}

@model List<Location>

<!DOCTYPE html>
<html>
<head>
    <title>Location List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Location List</h2>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>LOCATION_NAME</th>
                    <th>LOCATION_ID</th>
                    <th>IS_CLEARANCE</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var location in Model)
                {
                    <tr>
                        <td>@location.LOCATION_NAME</td>
                        <td>@location.LOCATION_ID</td>
                        <td>@(location.IS_CLEARANCE ? "Y" : "N")</td>
                        <td><a class="btn btn-primary" asp-action="Edit" asp-route-locationName="@location.LOCATION_NAME">Edit</a></td>
                        <td>
                            @using (Html.BeginForm("Delete", "Home", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this location?');" }))
                            {
                                @Html.Hidden("locationName", location.LOCATION_NAME)
                                <button class="btn btn-danger" type="submit">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a class="btn btn-success" asp-action="Create">Create New Location</a>
        </div>
    </div>
    @Html.ActionLink("Create New Location", "Create")

</body>
</html>


