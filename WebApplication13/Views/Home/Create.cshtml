@model Location

@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    <div class="container">
        <h2 class="mt-3">Create Location</h2>

        <div class="form-group">
            @Html.LabelFor(i => i.LOCATION_NAME)
            @Html.TextBoxFor(i => i.LOCATION_NAME, new { @class = "form-control", style = "width: 50%;" })
        </div>
        <div class="form-group">
            @Html.LabelFor(i => i.LOCATION_ID)
            @Html.TextBoxFor(i => i.LOCATION_ID, new { @class = "form-control", style = "width: 50%;" })
        </div>
        <div class="form-check">
            @Html.CheckBoxFor(i => i.IS_CLEARANCE, new { @class = "form-check-input" })
            @Html.LabelFor(i => i.IS_CLEARANCE, new { @class = "form-check-label" })
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Add Location</button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-warning ml-2">Cancel</a>
        </div>
    </div>
}

